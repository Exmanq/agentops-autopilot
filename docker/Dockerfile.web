FROM node:20-alpine AS base
WORKDIR /app
COPY package.json pnpm-lock.yaml pnpm-workspace.yaml turbo.json tsconfig.base.json .eslintrc.cjs .prettierrc ./
COPY packages ./packages
RUN corepack enable && pnpm install --frozen-lockfile
RUN pnpm --filter @agentops-autopilot/web build

FROM node:20-alpine
WORKDIR /app
COPY --from=base /app/packages/web/.next ./.next
COPY --from=base /app/packages/web/package.json ./package.json
ENV NODE_ENV=production
EXPOSE 3000
CMD ["node", "node_modules/next/dist/bin/next", "start", "-p", "3000"]
